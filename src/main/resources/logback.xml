<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>

		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} [%highlight(%-5level)] [%cyan(%-15thread)] [%cyan(%-30logger{30})] %msg%n
			</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>
